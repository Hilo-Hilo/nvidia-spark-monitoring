# System Monitoring Dashboard Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=monitoring

# Backend Configuration
SECRET_KEY=change-me-in-production-generate-a-strong-random-key
CORS_ORIGINS=["*"]
METRICS_COLLECTION_INTERVAL=2
HISTORICAL_DATA_RETENTION_DAYS=30

# Frontend Configuration (optional)
# NEXT_PUBLIC_API_URL is auto-detected, only set if needed

# Sudo Password for Systemd Service Management (optional)
# Required for start/stop/restart/enable/disable operations on systemd services
# Leave empty if not using the Services page
SUDO_PASSWORD=
